{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": "airbnb-base",
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "no-underscore-dangle": [
      "error",
      {
        "allow": ["_id"]
      }
    ],
    "no-console": 0,
    "global-require": 0,
    "linebreak-style": ["error", "unix"],
    "max-len": [
      "error",
      {
        "code": 200
      }
    ],
    "func-names": ["error", "never"],
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^next"
      }
    ],
    "no-param-reassign": [
      "error",
      {
        "props": false
      }
    ]
  }
}
